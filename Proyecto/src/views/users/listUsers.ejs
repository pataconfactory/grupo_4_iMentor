<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

<body>
    
    <%- include('../partials/header') %>

    <main>
        <div class="contenedor-edicion-productos">
            <h2>Usuarios Existentes</h2>
            <div class="opciones-desplegables">
                <p class="roles">
                    <form action="/users/roles" method="POST" class="select-form">
                        <select name="roles" id="roles" class="select">
                            <option selected="true" disabled="disabled">seleccione la categor√≠a</option>
                            <option value="0">Todas</option>
                            <option value="1">Usuarios</option>
                            <option value="3">Mentores</option>
                            <option value="2">Administradores</option>
                        </select>
                    </form>
                </p>
            </div>
            <div class="container-productos-existentes">
                <div class="boton-crear-producto">
                    <a href="/users/register" class="crear-producto"><i class="fas fa-plus-circle"></i> Crear usuario</a>
                </div>
                <section class="container" id="slider">
                    <% for(let i=0; i < users.length; i++) { %>           
                        <div class="miniatura">
                            <img src="/img/avatars/<%= `${users[i].avatar}` %>" alt="Imagen del usuario">
                            <div class="product-details">
                                <h3><%= users[i].first_name %> <%= users[i].last_name %></h3>
                                <h3 class="name-product">Usuario: <%= users[i].user_name %></h3>
                                <h3><%= users[i].email %></h3>
                                <p><%= users[i].title %></p>
                                <p><%= users[i].country %></p>
                                <p><%= users[i].roles.role_name %></p>
                                <a href="/users/detail/<%= users[i].user_id %>/<%= users[i].email %>" class="boton-final"><i class="fas fa-eye"></i>Ver</a>
                                <form class="eliminar" action="/users/delete/<%= users[i].user_id %>/<%= users[i].email %>?_method=DELETE" method="POST">
                                    <button type="submit" class="boton-final-eliminar"><i class="fas fa-trash"></i>Eliminar</button>
                                </form>
                            </div>
                        </div>
                    <% } %>
                </section>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %>

    <script src="/js/users.js"></script>
</body>
</html>