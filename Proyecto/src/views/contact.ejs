<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>
    <main>
        <div class="container-contact-main">
            <% if(locals.mensaje_usuario != undefined) { %>
                <div>
                    <p class="message-error"><%= locals.mensaje_usuario %></p>
                </div>
            <% } %>
            <form action="/contact/" method="POST" class="contact-form">
                <h3>Contáctanos</h3>
                <input type="text" name="name" id="name" placeholder="Ingrese su nombre"
                value="<%= locals.old ? old.name : null %>">
                <% if (locals.errors && errors.name) { %>
                <div class="text-danger">
                    <p class="feedback"><%= errors.name.msg %></p>
                </div>
                <% } %>
                <div class="text-danger">
                    <p class="name-error"></p>
                </div>
                <input type="email" name="email" id="email" placeholder="Ingrese su Email"
                value="<%= locals.old ? old.email : null %>">
                <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                    <p class="feedback"><%= errors.email.msg %></p>
                </div>
                <% } %>
                <div class="text-danger">
                    <p class="email-error"></p>
                </div>
                <input type="number" name="phone" id="phone" placeholder="Ingrese su número de telefóno"
                value="<%= locals.old ? old.phone : null %>">
                <% if (locals.errors && errors.phone) { %>
                <div class="text-danger">
                    <p class="feedback"><%= errors.phone.msg %></p>
                </div>
                <% } %>
                <div class="text-danger">
                    <p class="phone-error"></p>
                </div>
                <textarea name="message" id="message" cols="30" rows="4" placeholder="Déjanos tu mensaje"></textarea
                value="<%= locals.old ? old.message : null %>">
                <% if (locals.errors && errors.message) { %>
                <div class="text-danger">
                    <p class="feedback"><%= errors.message.msg %></p>
                </div>
                <% } %>
                <div class="text-danger">
                    <p class="message-error"></p>
                </div>
                <button type="submit">Send contact</button>
            </form>
        </div>
    </main>
    <%- include('./partials/footer') %>
    <script src="/js/contactValidation.js"></script>
</body>

</html>